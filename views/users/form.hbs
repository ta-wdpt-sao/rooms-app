<div class="container py-4">
    <h1>Edit your profile</h1>

    {{#with user}}
      <form id="form" action="/users/{{#if _id}}edit{{else}}add{{/if}}" method="POST" enctype="multipart/form-data">
        <input type="hidden" id="_id" name="_id" value="{{_id}}">

        <div class="form-group">
          <label for="fullName">Full Name</label><br>
          <input type="text" class="form-control" id="fullName" name="fullName"
            placeholder="add your Name"
            value="{{fullName}}">        
        </div>

        <div class="form-group">
          <label for="imageUrl">Profile Image</label><br>
          <input type="file" class="form-control" id="imageUrl" name="imageUrl"
            placeholder="add your Photo"
            value="{{imageUrl}}">        
        </div>

        {{#if msgError}}
          <div class="alert alert-danger">{{ msgError }}</div>
        {{/if}}

        <button class="btn btn-primary btn-block">Edit</button>
      </form>
    {{/with}}
</div>
